extends layout.login

block content
    section.s-login.s-register
        form.fm-form(name='form_register')
            h1 feedmaid
            div.row.clearfix
                div.name
                    p Account
                div.value
                    input(type='text', name='username', value='username')
            div.row.clearfix
                div.name
                    p Password
                div.value
                    input(type='password', name='password', value='password')
            div.row.clearfix
                div.name
                    p Email
                div.value
                    input(type='text', name='email', value='a@b.com')
            div.row.clearfix
                div.action
                    button.fm-button#btn_create Create

block append logic
    script
        (function () {
            'use strict';
            /*global seajs*/
            seajs.use([ '/js/page.register.js' ], function (page) {
                page.ready();
            });
        }());